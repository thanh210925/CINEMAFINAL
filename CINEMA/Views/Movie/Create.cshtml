@model CINEMA.Models.Movie
@{
    ViewData["Title"] = "Thêm phim";
    Layout = "_AdminLayout";
}

<div style="max-width: 800px; margin: 0 auto; padding: 2rem;">
    <h2 style="font-weight: 700; font-size: 2rem; margin-bottom: 2rem; color: #1a1a1a; display: flex; align-items: center; gap: 0.75rem;">
        <span style="font-size: 2.5rem;">🎬</span>
        Thêm phim mới
    </h2>

    <form asp-action="Create" method="post" style="background: white; padding: 2.5rem; border-radius: 16px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);">

        <!-- 🏷️ Tên phim -->
        <div style="margin-bottom: 1.75rem;">
            <label class="fw-semibold text-secondary">Tên phim</label>
            <input asp-for="Title" class="form-control"
                   style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;"
                   onfocus="this.style.borderColor='#3b82f6'; this.style.boxShadow='0 0 0 3px rgba(59,130,246,0.1)'"
                   onblur="this.style.borderColor='#e5e7eb'; this.style.boxShadow='none'" />
        </div>

        <!-- Thời lượng & Ngày khởi chiếu -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <label class="fw-semibold text-secondary">Thời lượng (phút)</label>
                <input asp-for="Duration" type="number" class="form-control"
                       style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;" />
            </div>
            <div class="col-md-6">
                <label class="fw-semibold text-secondary">Ngày khởi chiếu</label>
                <input asp-for="ReleaseDate" type="date" class="form-control"
                       style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;" />
            </div>
        </div>

        <!-- Quốc gia & Ngôn ngữ -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <label class="fw-semibold text-secondary">Quốc gia</label>
                <input asp-for="Country" class="form-control"
                       style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;" />
            </div>
            <div class="col-md-6">
                <label class="fw-semibold text-secondary">Ngôn ngữ</label>
                <input asp-for="Language" class="form-control"
                       style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;" />
            </div>
        </div>

        <!-- Giới hạn tuổi & Trạng thái -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <label class="fw-semibold text-secondary">Giới hạn tuổi</label>
                <input asp-for="AgeRating" class="form-control"
                       style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;" />
            </div>
            <div class="col-md-6">
                <label class="fw-semibold text-secondary">Trạng thái</label>
                <select asp-for="IsActive" class="form-select"
                        style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;">
                    <option value="true">Đang chiếu</option>
                    <option value="false">Ngưng chiếu</option>
                </select>
            </div>
        </div>

        <!-- 📝 Mô tả -->
        <div style="margin-bottom: 1.75rem;">
            <label class="fw-semibold text-secondary">Mô tả</label>
            <textarea asp-for="Description" rows="4" class="form-control"
                      style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px; resize: vertical;"></textarea>
        </div>

        <!-- 📸 Poster -->
        <div style="margin-bottom: 1.75rem;">
            <label class="fw-semibold text-secondary">Poster URL</label>
            <input asp-for="PosterUrl" class="form-control"
                   style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;"
                   placeholder="https://example.com/poster.jpg" />
        </div>

        <!-- 🎥 Trailer -->
        <div style="margin-bottom: 2rem;">
            <label class="fw-semibold text-secondary">Trailer URL</label>
            <input asp-for="TrailerUrl" class="form-control"
                   style="padding: 0.75rem 1rem; border: 2px solid #e5e7eb; border-radius: 8px;"
                   placeholder="https://www.youtube.com/watch?v=..." />
            <small class="text-muted fst-italic">
                Hỗ trợ link YouTube (v=...) hoặc file .mp4
            </small>
        </div>

        <!-- 🔘 Nút -->
        <div style="display: flex; gap: 1rem; padding-top: 1rem; border-top: 1px solid #e5e7eb;">
            <button type="submit"
                    style="flex: 1; padding: 0.875rem 1.5rem; background: #3b82f6; color: white; border: none; border-radius: 8px; font-weight: 600; font-size: 1rem; cursor: pointer; transition: all 0.2s;"
                    onmouseover="this.style.background='#2563eb'; this.style.transform='translateY(-1px)';"
                    onmouseout="this.style.background='#3b82f6'; this.style.transform='translateY(0)';">
                💾 Lưu phim
            </button>

            <a asp-action="Index"
               style="flex: 1; padding: 0.875rem 1.5rem; background: #f3f4f6; color: #374151; border: none; border-radius: 8px; font-weight: 600; font-size: 1rem; text-decoration: none; text-align: center; cursor: pointer; transition: all 0.2s; display: flex; align-items: center; justify-content: center;"
               onmouseover="this.style.background='#e5e7eb';"
               onmouseout="this.style.background='#f3f4f6';">
                ❌ Hủy
            </a>
        </div>
    </form>
</div>
