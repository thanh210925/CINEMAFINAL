@model CINEMA.Models.Genre
@{
    ViewData["Title"] = "Xóa Thể loại";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between">
            <h4 class="mb-0">🗑️ Xóa Thể loại</h4>
        </div>

        <div class="card-body">
            <h5 class="fw-bold text-danger">@Model.Name</h5>
            <p class="text-muted">@Model.Description</p>

            <div class="mb-3">
                <label class="fw-bold">📌 Các phim thuộc thể loại này:</label>

                @if (Model.Movies != null && Model.Movies.Any())
                {
                    <ul>
                        @foreach (var movie in Model.Movies)
                        {
                            <li>@movie.Title</li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Không có phim nào.</p>
                }
            </div>

            <button type="button" class="btn btn-danger px-4" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                <i class="bi bi-trash"></i> Xóa thể loại
            </button>

            <a asp-action="Index" class="btn btn-secondary px-4">
                <i class="bi bi-arrow-left"></i> Hủy
            </a>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body fs-5">
                Bé chắc chắn muốn xóa thể loại
                <strong class="text-danger">@Model.Name</strong> không?
                <br />
                <b>Hành động này không thể hoàn tác.</b>
            </div>

            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="GenreId" />

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>

                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-check-circle"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <style>
        .modal-content {
            border-radius: 1rem;
        }

        .modal-header {
            border-top-left-radius: 1rem;
            border-top-right-radius: 1rem;
        }

        .btn-danger {
            background: linear-gradient(135deg, #dc2626, #ef4444);
            border: none;
        }

            .btn-danger:hover {
                background: linear-gradient(135deg, #b91c1c, #dc2626);
            }
    </style>
}
