<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CineZone Admin</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- 🔹 Custom Admin Style -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- 🌟 Navbar -->
    <header class="fixed-top shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container-fluid px-4">

                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center gap-2 fw-bold fs-4" asp-controller="Admin" asp-action="Dashboard">
                    <span class="badge p-2">CZ</span> CineZone <span class="text-danger">Admin</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarAdmin" aria-controls="navbarAdmin"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarAdmin">
                    <!-- Left menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 gap-2">
                        <li class="nav-item">
                            <a class="nav-link fw-semibold px-3 py-2" asp-controller="Admin" asp-action="Dashboard">
                                <i class="bi bi-speedometer2 me-1"></i> Dashboard
                            </a>
                        </li>

                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3 py-2" asp-controller="Movie" asp-action="Index">
                                    <i class="bi bi-film me-1"></i> Quản lý Phim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3 py-2" asp-controller="CustomerAdmin" asp-action="Index">
                                    <i class="bi bi-people me-1"></i> Khách hàng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold px-3 py-2" asp-controller="Combo" asp-action="Index">
                                    <i class="bi bi-cup-straw me-1"></i> Bắp & Nước
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Right menu -->
                    <ul class="navbar-nav ms-auto align-items-center gap-3">
                        @if (Context.Session.GetString("Role") == "Admin")
                        {
                            <li class="nav-item">
                                <span class="badge rounded-pill px-3 py-2 admin-badge">
                                    <i class="bi bi-person-circle me-1"></i>
                                    @Context.Session.GetString("Name") (Admin)
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm fw-semibold px-3 py-2"
                                   asp-controller="Admin" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- 🌟 Main Content -->
    <main class="flex-fill py-4">
        <div class="container-fluid px-4">
            @RenderBody()
        </div>
    </main>

    <!-- 🌟 Footer -->
    <footer class="border-top mt-auto py-3 shadow-soft">
        <div class="container-fluid px-4 d-flex flex-column flex-md-row justify-content-between align-items-center">
            <p class="mb-1 mb-md-0 text-muted">
                &copy; 2025 <strong class="text-dark">CineZone Admin</strong> — All rights reserved.
            </p>
            <p class="mb-0 text-muted">
                Powered by <span class="text-primary fw-semibold">CineZone Team</span>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
