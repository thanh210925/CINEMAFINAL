<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CINEZONE</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CINEMA.styles.css" asp-append-version="true" />

</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow fixed-top">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-film"></i> CineZone
                </a>

                <!-- Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Menu bên trái -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Schedule">
                                <i class="bi bi-calendar-event"></i> Lịch chiếu
                            </a>
                        </li>
                        </ul>
                    <!-- Menu bên phải -->
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("CustomerName") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Customer" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Customer" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Đăng ký
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> Xin chào, @Context.Session.GetString("CustomerName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Customer" asp-action="Profile">
                                            <i class="bi bi-person-lines-fill me-2"></i> Hồ sơ cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Ticket" asp-action="MyTickets">
                                            <i class="bi bi-ticket-perforated me-2"></i> Vé của tôi
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Customer" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Nội dung chính -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="text-white mt-5 pt-5 pb-4" style="background: linear-gradient(90deg,#CBE7E3 , #3b82f6);">
        <div class="container">
            <div class="row gy-4">
                <!-- Logo & Buttons -->
                <div class="col-lg-3 col-md-6 text-center text-md-start">
                    <div class="mb-3">
                        <img src="~/images/logo.png" alt="CineZone" style="height: 60px;">
                    </div>
                    <p class="small mb-3">Điểm hẹn điện ảnh</p>

                    <div class="d-flex flex-wrap justify-content-center justify-content-md-start gap-2 mb-3">
                        <a asp-controller="Home" asp-action="Schedule" class="btn btn-warning fw-bold px-4 py-2 text-dark">🎟 ĐẶT VÉ</a>
                    </div>

                    <div class="d-flex justify-content-center justify-content-md-start gap-3 mt-3">
                        <a href="#" class="text-white fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-youtube"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-tiktok"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-instagram"></i></a>
                    </div>

                    <p class="mt-3 small">Ngôn ngữ: <span class="flag-icon">🇻🇳</span> VN</p>
                </div>

                <!-- Cột 2 -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold text-uppercase mb-3">Tài khoản</h6>
                    <ul class="list-unstyled small">
                        <li>
                            <a asp-controller="Home" asp-action="Login" class="text-white text-decoration-none">Đăng Nhập</a>
                        </li>
                        <li>
                        <a asp-controller="Home" asp-action="Register" class="text-white text-decoration-none">Đăng ký</a>
                        </li>
                    </ul>
                </div>

                <!-- Cột 3 -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold text-uppercase mb-3">Xem phim</h6>
                    <ul class="list-unstyled small">
                        <li>
                            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none d-block">
                                Phim đang chiếu
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none d-block">
                                Phim sắp chiếu
                            </a>
                        </li>
                    </ul>

                </div>

                <!-- Cột 4 -->
                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-bold text-uppercase mb-3">Dịch vụ khác</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-white text-decoration-none">Thuê rạp ( Đang thử nghiệm) </a></li>
                    </ul>
                </div>

                <!-- Cột 5 -->
                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-bold text-uppercase mb-3">Hệ thống rạp</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-white text-decoration-none">CineZone Quận 1 (TP.HCM)</a></li>
                    </ul>
                </div>
            </div>

            <hr class="border-light my-4 opacity-50">

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center small text-center text-md-start">
                <div>
                    © 2025 <strong>CineZone</strong>. All rights reserved.
                </div>
                <div class="d-flex gap-4 mt-2 mt-md-0">
                    <a asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none">Chính sách bảo mật</a>
                    <a href="#" class="text-white text-decoration-none">Tin điện ảnh</a>
                    <a href="#" class="text-white text-decoration-none">Hỏi & Đáp</a>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
