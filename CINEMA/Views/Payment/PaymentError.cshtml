@{
    ViewData["Title"] = "Thanh toán thất bại";
    Layout = "_Layout"; // Hoặc layout chính của bạn
}

<div class="container mt-5 mb-5 text-center">
    <div class="card p-4 p-md-5 shadow-sm mx-auto border-danger" style="max-width: 600px;">

        @* Icon lỗi đỏ *@
        <div style="font-size: 4rem; color: #dc3545;">
            <i class="bi bi-x-circle-fill"></i>
        </div>

        <h2 class="fw-bold text-danger mt-3 mb-3">Thanh toán không thành công!</h2>
        <p class="lead">Đã có lỗi xảy ra trong quá trình xử lý thanh toán.</p>

        <hr class="my-4">

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <p class="text-danger"><strong>Chi tiết:</strong> @ViewBag.Message</p>
        }
        else
        {
            <p>Vui lòng thử lại hoặc chọn phương thức thanh toán khác.</p>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-2 mb-2"> <i class="bi bi-house-door me-1"></i>Về trang chủ</a>
            @* Nút quay lại trang thanh toán (có thể cần truyền lại dữ liệu vé) *@
            @* <a asp-controller="Payment" asp-action="Index" class="btn btn-warning mb-2"> <i class="bi bi-arrow-left me-1"></i>Thử lại thanh toán</a> *@
        </div>
    </div>
</div>