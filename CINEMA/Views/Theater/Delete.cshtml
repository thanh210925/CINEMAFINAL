@model CINEMA.Models.Theater
@{
    ViewData["Title"] = "Xóa rạp chiếu";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3 text-danger">🗑️ Xóa rạp</h2>

    <div class="alert alert-warning">
        <strong>Bạn có chắc muốn xóa rạp này không?</strong>
    </div>

    <dl class="row">
        <dt class="col-sm-2">Tên rạp</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Địa chỉ</dt>
        <dd class="col-sm-10">@Model.Address</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TheaterId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
