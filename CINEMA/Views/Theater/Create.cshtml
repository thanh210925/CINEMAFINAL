@model CINEMA.Models.Theater
@{
    ViewData["Title"] = "Thêm rạp chiếu mới";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3 text-success">➕ Thêm rạp chiếu</h2>

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label">Tên rạp</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Điện thoại</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Google Map URL</label>
            <input asp-for="GoogleMapUrl" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
