@model CINEMA.Models.Customer
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container mt-4">
    <h2><i class="bi bi-person-badge"></i> Hồ sơ cá nhân</h2>
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <p><strong>Họ và tên:</strong> @Model.FullName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Số điện thoại:</strong> @Model.Phone</p>
            <p><strong>Ngày tạo:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy")</p>
            <p><strong>Lần đăng nhập gần nhất:</strong> @Model.LastLogin?.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Customer" asp-action="Logout" class="btn btn-danger">
            <i class="bi bi-box-arrow-right"></i> Đăng xuất
        </a>
    </div>
</div>
