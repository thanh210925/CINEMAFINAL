@model IEnumerable<CINEMA.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container mt-4">
    <h2 class="fw-bold text-center mb-4 text-gradient">📦 Quản lý đơn hàng</h2>

    <form class="d-flex mb-4 justify-content-between">
        <input type="text" name="search" class="form-control w-50" placeholder="🔍 Tìm theo tên khách hàng hoặc mã đơn...">
        <select name="status" class="form-select w-25 mx-2">
            <option value="">-- Trạng thái --</option>
            <option>Đang chờ thanh toán</option>
            <option>Đã thanh toán</option>
            <option>Đã hủy</option>
        </select>
        <button class="btn btn-primary">Lọc</button>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">Không có đơn hàng nào.</div>
    }
    else
    {
        <table class="table table-bordered table-hover text-center align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Mã đơn</th>
                    <th>Khách hàng</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td><strong>@("CZ" + o.OrderId.ToString("D6"))</strong></td>
                        <td>@o.Customer?.FullName</td>
                        <td>@o.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-danger fw-bold">@String.Format("{0:N0} ₫", o.TotalAmount)</td>
                        <td>
                            <span class="badge bg-@(
                                  o.Status.Contains("Đã") ? "success" :
                                  o.Status.Contains("chờ") ? "warning text-dark" : "secondary"
                                                        )">
                            @o.Status
                        </span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@o.OrderId" class="btn btn-sm btn-info text-white">
                            <i class="bi bi-eye"></i> Xem
                        </a>
                        <a asp-action="Edit" asp-route-id="@o.OrderId" class="btn btn-sm btn-warning text-white">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@o.OrderId" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xóa đơn này?');">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                        </form>
                    </td>
                </tr>
                        }
            </tbody>
        </table>
    }
</div>

<style>
    .text-gradient {
        background: linear-gradient(90deg, #007bff, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>
